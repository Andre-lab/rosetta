<ROSETTASCRIPTS>
	<SCOREFXNS>
		<s_implicit weights=score12prime/>

		<s_explicit weights=score12prime>
		        Parameters options
			<Set hbonds:params_database_tag=sp2_hackelec_params/>

			Functional form options
			<Set hbonds:exclude_self_hbonds=true/>
			<Set hbonds:smooth_hb_env_dep=true/>
			<Set hbonds:bb_donor_acceptor_check=true/>
			<Set hbonds:use_incorrect_deriv=false/>

			Scoring options
			<Set hbonds:decompose_bb_hb_into_pair_energies=false/>

		        nucleic acid options
			<Set hbonds:exclude_DNA_DNA_hbond=true/>
			<Set hbonds:use_hb_env_dep_DNA=true/>
			<Set hbonds:include_intra_res_RNA=false/>

			Membrane options
			<Set hbonds:Mbhbond=false/>

			Sp2 options
			<Set hbonds:use_sp2_chi_penalty=true/>
			<Set hbonds:sp2_BAH180_rise=.75/>
			<Set hbonds:sp2_outer_width=0.357/>
			<Set hbonds:measure_sp3acc_BAH_from_hvy=true/>
			<Set hbonds:fade_energy=true/>
		</s_explicit>	
	</SCOREFXNS>
	<MOVERS>
		<ReportToDB
			name=hb_implicit
			database_name="features_hb_implicit.db3"
			batch_description="Test implicit specification of hbond parameters.">
			<feature name=ResidueFeatures/>
			<feature name=HBondFeatures scorefxn=s_implicit/>
		</ReportToDB>

		<ReportToDB
			name=hb_explicit
			database_name="features_hb_explicit.db3"
			batch_description="Test explicit specification of default hbond parameters">
			<feature name=ResidueFeatures/>
			<feature name=HBondFeatures scorefxn=s_explicit/>
		</ReportToDB>


	</MOVERS>
	<PROTOCOLS>
		<Add mover_name=hb_implicit/>
		<Add mover_name=hb_explicit/>
	</PROTOCOLS>
</ROSETTASCRIPTS>
