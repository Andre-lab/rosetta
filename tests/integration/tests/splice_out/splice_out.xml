<dock_design>
	<TASKOPERATIONS>
		<InitializeFromCommandline name=init/>
		<RestrictToRepacking name=rtr/>


	</TASKOPERATIONS>
	<SCOREFXNS>
		<sc12_w_correction weights=talaris2013_calibrated>
			<Reweight scoretype="res_type_constraint" weight=0.5/>
			<Reweight scoretype="coordinate_constraint" weight=10/>
			<Reweight scoretype="dihedral_constraint" weight=1/>
		</sc12_w_correction>
  		<score12_chainbreak weights=talaris2013_calibrated>
        	<Reweight scoretype=chainbreak weight=1/>
        </score12_chainbreak>
	</SCOREFXNS>
	<FILTERS>
		<ScoreType name=chainbreak_val scorefxn=score12_chainbreak score_type=chainbreak threshold=100/>

	</FILTERS>
	<MOVERS>
		<Splice name=splice loop_pdb_source="%%source%%" source_pdb="%%source%%" loop_dbase_file_name="H1_H2.db" scorefxn=sc12_w_correction ccd=1  randomize_cut=1 cut_secondarystruc=0 rms_cutoff=100 splice_filter=chainbreak_val thread_ala=0 template_file="%%source_pdb%%" design_task_operations=init,rtr design_shell=0 repack_shell=0 design=1 protein_family="antibodies" segment=H1_H2 tail_segment="n" use_sequence_profiles=0 CG_const=1 debug=0 thread_original_sequence=1> //using the disulfide as start and end points for the segment
		</Splice>
	</MOVERS>
	<APPLY_TO_POSE>
	</APPLY_TO_POSE>
	<PROTOCOLS>
		<Add mover=splice/> 
		Add filter=designable/>
	</PROTOCOLS>
</dock_design>
