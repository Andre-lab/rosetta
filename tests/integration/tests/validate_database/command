cd %(workdir)s

[ -x %(bin)s/validate_database.%(binext)s ] || exit 1

#Force creation of Rotlib binaries if for some reason they haven't been made in the main database yet
%(bin)s/validate_database.%(binext)s -database %(database)s -out:levels core.pack.dunbrack:debug -constant_seed 2>&1 \
     | sed -e 's|%(database)s|ROSETTA_DATABASE|' \
     | egrep -vf ../../ignore_list \
    > dun10.log

dun10status=${PIPESTATUS[0]}

%(bin)s/validate_database.%(binext)s -database %(database)s -out:levels core.pack.dunbrack:debug -constant_seed -restore_pre_talaris_2013_behavior 2>&1 \
     | sed -e 's|%(database)s|ROSETTA_DATABASE|' \
     | egrep -vf ../../ignore_list \
    > dun02.log

dun02status=${PIPESTATUS[0]}

%(bin)s/validate_database.%(binext)s -database %(database)s -out:levels core.pack.dunbrack:debug -constant_seed -restore_pre_talaris_2013_behavior -correct 2>&1 \
     | sed -e 's|%(database)s|ROSETTA_DATABASE|' \
     | egrep -vf ../../ignore_list \
    > dun02_correct.log

dun02correctstatus=${PIPESTATUS[0]}

test "${dun10status}" != '0' && exit 1 || true
test "${dun02status}" != '0' && exit 1 || true
test "${dun02correctstatus}" != '0' && exit 1 || true

