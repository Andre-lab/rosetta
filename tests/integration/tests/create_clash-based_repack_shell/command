cd %(workdir)s

# making script terminate with error after any command that return non zero exit code
set -e

# It's nice to test that the executable exists first, to ensure the test actually runs:

[ -x %(bin)s/create_clash-based_repack_shell.%(binext)s ] || exit 1

%(bin)s/create_clash-based_repack_shell.%(binext)s %(additional_flags)s @flags -database %(database)s -testing:INTEGRATION_TEST  2>&1 \
     | egrep -vf ../../ignore_list \
     > log

test "${PIPESTATUS[0]}" != '0' && exit 1 || true  # Check if the first executable in pipe line return error and exit with error code if so

