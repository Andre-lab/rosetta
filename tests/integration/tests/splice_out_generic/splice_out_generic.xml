<ROSETTASCRIPTS>
         <TASKOPERATIONS>
				 	<ProteinInterfaceDesign name="pido" design_chain1="1" design_chain2="1"/>
    		<InitializeFromCommandline name="init"/>
		<RestrictToRepacking name="rtr"/>
  	</TASKOPERATIONS>
        <SCOREFXNS>
		<ScoreFunction name="talaris_cal" weights="talaris2013_calibrated">
			<Reweight scoretype="coordinate_constraint" weight="1"/>
			<Reweight scoretype="dihedral_constraint" weight="1"/>
		</ScoreFunction>

		<ScoreFunction name="talaris_cal_chainbreak" weights="talaris2013_calibrated">
			<Reweight scoretype="chainbreak" weight="1"/>
		</ScoreFunction>
        </SCOREFXNS>

        <FILTERS>
	        <ScoreType name="chainbreak_val" scorefxn="talaris_cal_chainbreak" score_type="chainbreak" threshold="100" confidence="0"/>
        </FILTERS>

        <MOVERS>
		<RBIn name="RB_in_1emv" rigid_body_dbase="out/rb_jump_db/1emv_jump.db" from_entry="1" to_entry="10000" modify_foldtree="false"/>
		<RBIn name="RB_in_3u43" rigid_body_dbase="out/rb_jump_db/3u43_jump.db" from_entry="1" to_entry="10000" modify_foldtree="false"/>

		<AtomTree name="hotspot_tree" pdb_num="163B" anchor_res="50A" connect_to="CA" connect_from="CA"/>

		<PackRotamersMover name="design" task_operations="init,pido" scorefxn="talaris_cal"/>
		<Splice name="splice" use_sequence_profiles="0" skip_alignment="true"  loop_pdb_source="%%source%%" source_pdb="%%source%%" loop_dbase_file_name="%%dbase%%_hlh.db" scorefxn="talaris_cal" ccd="1" res_move="100" randomize_cut="1" cut_secondarystruc="0" from_res="%%from_res%%" to_res="%%to_res%%" rms_cutoff="100" splice_filter="chainbreak_val" thread_ala="0" template_file="%%start_pdb%%" design_task_operations="init,rtr" design="1" debug="1" thread_original_sequence="1"> 
      <Segments current_segment="endo"/>
			    </Splice>

        </MOVERS>

        <PROTOCOLS>
                <Add mover="splice"/>
        </PROTOCOLS>

</ROSETTASCRIPTS>
