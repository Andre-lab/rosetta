		<ScoreFunction name="ref_symm" weights="ref2015.wts" symmetric="true" />
	</SCOREFXNS>
	<RESIDUE_SELECTORS>
		<Index name="helix1" resnums="1-20" />
		<Index name="helix2" resnums="21-40" />
	</RESIDUE_SELECTORS>
	<TASKOPERATIONS>
	</TASKOPERATIONS>
	<FILTERS>
	</FILTERS>
	<MOVERS>
