# nonlocal
-run:protocol nonlocal_abinitio
-abinitio:relax false

# target options
-frag3 cs_frags.3mers.gz
-frag9 cs_frags.9mers.gz
-fasta casd_rhodopsin.fasta

# template
-in:file:template_pdb 3ddlB_63.pdb
-in:file:alignment combined.filt
-cm:aln_format grishin

# constraints
-constraints:cst_file 3ddlB_63.filt.fixed.dist_csts
-constraints:cst_weight 0.5
-constraints:cst_fa_file 3ddlB_63.filt.fixed.dist_csts
-constraints:cst_fa_weight 0.5

# sampling
-abinitio:increase_cycles 0.05

# Missing density
-idealize_after_loop_close
-loops:extended
-loops:build_initial
-loops:remodel quick_ccd
-random_grow_loops_by 4
-select_best_loop_from 1
-loops:frag_sizes 9 3 1
-loops:frag_files cs_frags.9mers.gz cs_frags.3mers.gz none
-in:detect_disulf false
-fail_on_bad_hbond false
